<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#17171F"
    android:padding="8dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/widget_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_full_color"
            android:drawablePadding="4dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="Binance"
            android:textColor="@android:color/white"
            android:textSize="12sp"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/widget_more_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:contentDescription="@null"
            app:srcCompat="@drawable/ic_more_horiz"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp">

        <Button
            android:id="@+id/btn_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_filled_binance"
            android:layout_gravity="center"
            android:padding="16dp"
            android:text="Connect" />

        <LinearLayout
            android:id="@+id/binance_widget_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">

            <TextView
                android:id="@+id/binance_balance_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btc_balance"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="4dp"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/binance_usd_balance_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/usd_balance"
                android:textColor="#FFFFFF"
                android:alpha="0.6"
                android:textSize="12sp" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>